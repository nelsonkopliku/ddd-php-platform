FROM rabbitmq:3.8.2-management-alpine

RUN wget \
    https://github.com/rabbitmq/rabbitmq-delayed-message-exchange/releases/download/v3.8.0/rabbitmq_delayed_message_exchange-3.8.0.ez \
    -O /opt/rabbitmq/plugins/rabbitmq_delayed_message_exchange-3.8.0.ez \
    && chown rabbitmq:rabbitmq /opt/rabbitmq/plugins/rabbitmq_delayed_message_exchange-3.8.0.ez
